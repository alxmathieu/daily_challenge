<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1455044372794-d981761b5bc6?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=a214139a5bab0832be955bcefa43f3ba&auto=format&fit=crop&w=2850&q=80')">
  <div class="banner-content">
    <h1>Daily Challenges</h1>
    <p>Get some thrills in your life!</p>
    <%= link_to "Start now", challenge_path(@todays_challenge), class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="homepage-title">
    <h1 style="text-align: center">Some challenges</h1>
  </div>
  <div class="row">
      <% @homepage_challenges.each do |challenge| %>
        <div class="col-xs-12 col-sm-6 col-md-4 ">
          <div class="card">
            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= challenge.title %></h2>
              <p><%= challenge.description %></p>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>


